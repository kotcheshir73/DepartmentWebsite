<Page
    x:Class="DepartmentUniversalTablet.ExportPackages.Egov.TP.ResultGroupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DepartmentUniversalTablet.ExportPackages.Egov.TP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel VerticalAlignment="Stretch">
            <TextBlock Text="Итоговые результаты:" TextWrapping="Wrap"  Margin="10" />
            <VariableSizedWrapGrid MaximumRowsOrColumns="2" Orientation="Horizontal" x:Name="grid" HorizontalAlignment="Stretch" >
                <TextBlock FontSize="24" HorizontalAlignment = "Center" Text = "Студенты" Margin="10" Width="230"/>
                <TextBlock FontSize="24" HorizontalAlignment = "Center" Text = "Баллы" Margin="10" Width="70"/>
            </VariableSizedWrapGrid>
        </StackPanel>
    </ScrollViewer>
</Page>
