@model List<(Guid Id, string Title)>

@if (Model.Count != 0)
{
    <p class="text-lecturer text-lecturer-discipline">
        <label>Преподаваемые дисциплины: </label>

        <ul class="text-lecturer-items">
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("Discipline", "Discipline", new { id = item.Id })">@item.Title</a></li>
            }
        </ul>
    </p>
}