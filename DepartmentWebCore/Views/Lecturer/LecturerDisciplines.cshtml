@model List<Tuple<Guid, string>>

@if (Model.Count != 0)
{
    <p class="text-lecturer text-lecturer-discipline">
        <label>Преподаваемые дисциплины: </label>

        <ul class="text-lecturer-items">
            @foreach (var item in Model)
            {
                <li><a href="@Url.Action("DisContent", "Discipline", new { id = item.Item1 })">@item.Item2</a></li>
            }
        </ul>
    </p>
}