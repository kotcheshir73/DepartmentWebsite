@{
    ViewBag.Title = Model.AcademicPlanRecordElementTitle + " : " + Model.LecturerName;
}

@using WebInterfaces.ViewModels
@model WebAcademicPlanRecordMissionViewModel

<form class="form-horizontal" style="margin-top:10px" asp-action="AcademicPlanRecordMission" asp-controller="StudyProcess">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="AcademicPlanRecordElementId" value="@Model.AcademicPlanRecordElementId" />
    <div class="form-group">
        <div class="col-xs-8">
            <label id="error" style="font-weight:bold;" class="col-sm-2 control-label text-danger">@ViewBag.Error</label>
            <button id="btnSave" type="button" class="btn btn-primary pull-right">Сохранить</button>
        </div>
    </div>
    <div class="form-group">
        <label style="font-weight:bold;" class="col-sm-2 control-label">Запись нагрузки*</label>
        <div class="col-xs-6">
            <select class="form-control" disabled>
                <option value="@Model.AcademicPlanRecordElementId">@ViewBag.AcademicPlanRecordElement.Disciplne</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label style="font-weight:bold;" class="col-sm-2 control-label">Преподаватель*</label>
        <div class="col-xs-6">
            <select class="form-control" asp-for="LecturerId">
                @foreach (var lecturer in ViewBag.Lecturers)
                {
                    if (lecturer.Id == Model.LecturerId)
                    {
                        <option selected value="@lecturer.Id">@lecturer.FullName</option>
                    }
                    else
                    {
                        <option value="@lecturer.Id">@lecturer.FullName</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label style="font-weight:bold;" class="col-sm-2 control-label">Часы*</label>
        <div class="col-xs-6">
            <input type="text" class="form-control" asp-for="Hours" value="@Model.Hours" required>
        </div>
    </div>
</form>

<script>
    $(function () {
        $('#btnSave').click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AcademicPlanRecordMission", "StudyProcess")',
                data: $('form').serialize(),
                success: function () {
                    window.location = document.referrer;
                },
                error: function (result) {
                    ShowError(result);
                }
            });
        });
    });
</script>