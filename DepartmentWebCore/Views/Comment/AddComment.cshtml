@model WebInterfaces.BindingModels.CommentSetBindingModel

@*<h4>CommentViewModel</h4>
<hr />*@
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Comment" method="post">
            @Html.HiddenFor(x => x.EventId)
            @Html.HiddenFor(x => x.DisciplineId)
            @Html.HiddenFor(x => x.ParentId)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Content" class="control-label"> </label>*@
                <input asp-for="Content" required maxlength="120" class="form-control"  />
                <span asp-validation-for="Content" class="text-danger" style="width:80%"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


