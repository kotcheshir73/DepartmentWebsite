@model  List<DepartmentService.ViewModels.IndividualPlanRecordViewModel>

@{
    ViewBag.Title = "Научно-исследовательская работа";
}

<h2>
    Научно-исследовательская работа
</h2>



<table class="table">
    <tr>
        <th rowspan="2">
            Вид работы
        </th>
        <th rowspan="2">
            Нормы времени
        </th>
        <th colspan="2" align="center">
            Осенний семестр (количество часов)
        </th>
        <th colspan="2" align="center">
            Весенний семестр (количество часов)
        </th>
    </tr>
    <tr>
        <th>
            по факту
        </th>
        <th>
            по плану
        </th>
        <th>
            по факту
        </th>
        <th>
            по плану
        </th>
    </tr>

    @using (Html.BeginForm())
    {
        for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => m[i].Id)
            @:
            <tr>
                <td>
                    @Html.DisplayFor(m => m[i].Name)
                </td>
                <td>
                    @Html.DisplayFor(m => m[i].TimeNormDescription)
                </td>
                <td>
                    @Html.EditorFor(m => m[i].PlanAutumn, new { htmlAttributes = new { @type = "number", size = "3", name = "num", min = "0", max = "500" } })
                </td>
                <td>
                    @Html.EditorFor(m => m[i].FactAutumn, new { htmlAttributes = new { @type = "number", size = "3", name = "num", min = "0", max = "500" } })
                </td>
                <td>
                    @Html.EditorFor(m => m[i].PlanSpring, new { htmlAttributes = new { @type = "number", size = "3", name = "num", min = "0", max = "500" } })
                </td>
                <td>
                    @Html.EditorFor(m => m[i].FactSpring, new { htmlAttributes = new { @type = "number", size = "3", name = "num", min = "0", max = "500" } })
                </td>
            </tr>
        }
        @:    </table> <br>
    <input type="submit" />

    <input type="button" value="Участие в хоздоговорной НИР" onclick="location.href='@Url.Action("ContractualWork", "NIR")'" />
    <input type="button" value="Перечень напечатанных материалов" onclick="location.href='@Url.Action("ScientificArticleOfPrint", "NIR")'" />
    <input type="button" value="Перечень опубликованных материалов" onclick="location.href='@Url.Action("ScientificArticleOfPublished", "NIR")'" />

}

