<Window x:Class="DepartmentWpf.TeachersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepartmentWpf"
        mc:Ignorable="d"
        Title="Преподаватели" Height="300" Width="583.594">
    <Grid>
        <Menu Height="20" VerticalAlignment="Top">
            <MenuItem x:Name="addMenuItem" Header="Добавить" Click="addMenuItem_Click" />
            <MenuItem x:Name="editMenuItem" Header="Редактировать" Click="editMenuItem_Click" />
            <MenuItem x:Name="deleteMenuItem" Header="Удалить" />
        </Menu>
        <DataGrid x:Name="dataGridTeachers" HorizontalAlignment="Left" Height="249" Margin="0,20,0,0" VerticalAlignment="Top" Width="576">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Фамилия"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Имя"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Отчество"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Адрес"/>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
